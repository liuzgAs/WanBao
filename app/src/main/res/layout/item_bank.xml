<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        app:contentPadding="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60">
                <com.wanbao.ui.CircleImageView
                    android:id="@+id/imageBank"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/ic_empty"/>
                <TextView
                    android:id="@+id/textBankName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/new_important_text"
                    android:text="sdfasdf"
                    android:textStyle="bold"
                    android:layout_alignTop="@+id/imageBank"
                    android:layout_marginLeft="@dimen/dp_50"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/new_important_text"
                    android:text="储蓄卡"
                    android:layout_alignBottom="@+id/imageBank"
                    android:layout_marginLeft="@dimen/dp_50"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/textBankId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/new_important_text"
                android:text="sdfasdf"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_50"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
