<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200">

        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            app:canLoop="true">

        </com.bigkoo.convenientbanner.ConvenientBanner>

        <TextView
            android:id="@+id/textZhiShiQi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_tran_15dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="2/6"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:text="现代瑞纳 2010款 三厢 1.4L 手动舒适GS"
        android:textColor="@color/light_black"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/textPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="9.98万"
            android:textColor="@color/light_red"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textPurchasePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textPrice"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/textPrice"
            android:layout_toRightOf="@+id/textPrice"
            android:text="新车指导价8.60万（含税）"
            android:textColor="@color/new_secondary_text"
            android:textSize="@dimen/sp_12" />

        <Button
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_basic1dp_5dp"
            android:text="VR看车"
            android:textColor="@color/light_red"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/textShiPing"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="视频看车"
        android:textColor="@color/light_black"
        android:textSize="20dp"
        android:textStyle="bold" />
    <RelativeLayout
        android:id="@+id/viewVideo"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.jzvd.JZVideoPlayerStandard
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/videoplayer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="车辆档案"
            android:textColor="@color/light_black"
            android:textSize="20dp"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/viewJiSuanQi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/textJiSuanQi"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_12"
                android:src="@mipmap/icon_jisuanqi"
                android:textColor="@color/new_important_text"
                android:textSize="@dimen/sp_13" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_3"
                android:text="计算器"
                android:textColor="@color/new_important_text"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="全部"
            android:textColor="@color/new_secondary_text"
            android:textSize="@dimen/sp_13" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView48"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@mipmap/icon_ershouche3" />

                <TextView
                    android:id="@+id/textArchives0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="2015年02月上牌"
                    android:textColor="@color/new_secondary_text"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/textArchives0001"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="2年8个月"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView49"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:src="@mipmap/icon_ershouche1" />

                <TextView
                    android:id="@+id/textArchives0100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="表显里程"
                    android:textColor="@color/new_secondary_text"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/textArchives0101"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="2.6万公里"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView50"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:src="@mipmap/icon_ershouche2" />

                <TextView
                    android:id="@+id/textArchives0200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="排放标准"
                    android:textColor="@color/new_secondary_text"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/textArchives0201"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="欧5"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView51"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:src="@mipmap/icon_ershouche5" />

                <TextView
                    android:id="@+id/textArchives0300"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="上架时间"
                    android:textColor="@color/new_secondary_text"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/textArchives0301"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="17天前"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView52"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:src="@mipmap/icon_ershouche4" />

                <TextView
                    android:id="@+id/textArchives0400"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="涡轮增压"
                    android:textColor="@color/new_secondary_text"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/textArchives0401"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="1.6L"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView53"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:src="@mipmap/icon_ershouche6" />

                <TextView
                    android:id="@+id/textArchives0500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="所在城市"
                    android:textColor="@color/new_secondary_text"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/textArchives0501"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="厦门"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/header_che_liang_xq01" />
</LinearLayout>