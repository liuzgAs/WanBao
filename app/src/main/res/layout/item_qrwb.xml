<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/new_important_text"
            android:textSize="@dimen/sp_13"/>
        <TextView
            android:id="@+id/textOldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/new_secondary_text"
            android:textSize="@dimen/sp_12"/>
        <TextView
            android:id="@+id/textNewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/new_important_text"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textDes"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/new_secondary_text"
        android:paddingRight="@dimen/dp_10"
        />
    <RelativeLayout
        android:id="@+id/viewImg"
        android:layout_width="match_parent"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:visibility="gone"
        android:layout_height="@dimen/dp_54">
        <ImageView
            android:id="@+id/imageCar"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_empty"/>
        <TextView
            android:id="@+id/textDes0"
            android:layout_marginLeft="@dimen/dp_75"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:textColor="@color/new_important_text"
            android:textSize="@dimen/sp_13"/>
        <TextView
            android:id="@+id/textOldPrice0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_75"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="@color/new_secondary_text"
            android:textSize="@dimen/sp_12"/>
    </RelativeLayout>
</LinearLayout>
