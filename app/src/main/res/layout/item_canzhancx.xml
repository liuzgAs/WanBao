<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90">

        <ImageView
            android:id="@+id/imageCar"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_empty" />

        <TextView
            android:id="@+id/textCarNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_13"
            android:textColor="@color/new_important_text"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_100"
            android:textColor="@color/new_secondary_text"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/textPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageCar"
            android:layout_alignLeft="@+id/textDes"
            android:layout_alignStart="@+id/textDes"
            android:textColor="@color/new_secondary_text"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/next_btn" />
    </RelativeLayout>
</LinearLayout>
