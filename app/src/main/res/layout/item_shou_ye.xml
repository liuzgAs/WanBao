<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/layout_selector_white_system_gray"
    >

    <ImageView
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/pzxx_che"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:id="@+id/imageImg"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标致207 2009款 三厢1.6L 手自一体"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/light_black"
        android:lines="1"
        android:ellipsize="end"
        android:id="@+id/textTitle"
        android:layout_alignTop="@+id/imageImg"
        android:layout_toRightOf="@+id/imageImg"
        android:layout_toEndOf="@+id/imageImg" />

    <TextView
        android:layout_marginTop="5dp"
        android:textColor="@color/new_secondary_text"
        android:textSize="@dimen/sp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="厦门|5万公里|2012年"
        android:id="@+id/textDes"
        android:layout_below="@+id/textTitle"
        android:layout_alignLeft="@+id/textTitle"
        android:layout_alignStart="@+id/textTitle" />

    <TextView
        android:textStyle="bold"
        android:textSize="@dimen/sp_13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9.98万"
        android:textColor="@color/light_red"
        android:id="@+id/textPrice"
        android:layout_alignBottom="@+id/imageImg"
        android:layout_alignLeft="@+id/textDes"
        android:layout_alignStart="@+id/textDes" />

    <TextView
        android:layout_alignBaseline="@+id/textPrice"
        android:textSize="@dimen/sp_13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="首付19.89万"
        android:textColor="@color/light_red"
        android:layout_marginLeft="5dp"
        android:id="@+id/textShouFu"
        android:layout_toRightOf="@+id/textPrice"
        android:layout_toEndOf="@+id/textPrice" />
</RelativeLayout>