<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wanbao.fragment.MakeMoneyFragment">
    <android.support.v7.widget.CardView
        android:id="@+id/viewBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:gravity="bottom"
        android:minHeight="?attr/actionBarSize"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/tranblack"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_gravity="bottom"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imageback"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_1"
                android:padding="@dimen/dp_8"
                android:visibility="invisible"
                android:background="?android:attr/selectableItemBackground"
                app:srcCompat="@mipmap/back" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="赚钱"
                android:textColor="@color/new_important_text"
                android:textSize="@dimen/sp_17" />
            <TextView
                android:id="@+id/titleRight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/layout_selector_white_system_gray"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:text="推荐记录"
                android:textColor="@color/light_red"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
