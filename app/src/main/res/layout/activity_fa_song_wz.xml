<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.wanbao.activity.FaSongWZActivity">

    <include layout="@layout/newtitle"></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="救援服务：拖车"
        android:textColor="@color/new_important_text"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="为了节省你的时间，你的下列信息将发送至万宝救援中心以便安排营救"
        android:textColor="@color/new_important_text"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/new_important_text"
            android:textSize="@dimen/sp_14"
            android:text="车辆"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/new_important_text"
            android:textSize="@dimen/sp_14"
            android:gravity="right"
            android:layout_marginRight="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:hint="车辆"/>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            app:srcCompat="@mipmap/next_btn" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/new_important_text"
            android:textSize="@dimen/sp_14"
            android:text="车牌号"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/new_important_text"
            android:textSize="@dimen/sp_14"
            android:gravity="right"
            android:layout_marginRight="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:hint="车牌号"/>

        <ImageView
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            app:srcCompat="@mipmap/next_btn" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/new_important_text"
            android:textSize="@dimen/sp_14"
            android:text="姓名"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/new_important_text"
            android:textSize="@dimen/sp_14"
            android:gravity="right"
            android:layout_marginRight="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:hint="姓名"/>

        <ImageView
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:visibility="invisible"
            app:srcCompat="@mipmap/next_btn" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/new_important_text"
            android:textSize="@dimen/sp_14"
            android:text="联系电话"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/new_important_text"
            android:textSize="@dimen/sp_14"
            android:gravity="right"
            android:layout_marginRight="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:hint="联系电话"/>

        <ImageView
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            app:srcCompat="@mipmap/next_btn" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="@dimen/dp_28">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            app:srcCompat="@mipmap/fswz_dz" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/new_secondary_text"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="当前车辆位置" />
    </LinearLayout>
    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_40"
        android:maxLines="1"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@color/new_important_text"
        android:text="定位中.."/>
    <com.amap.api.maps2d.MapView
        android:id="@+id/map"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.wanbao.base.ui.StateButton
        android:id="@+id/fasong"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:normalBackgroundColor="@color/new_red"
        app:pressedBackgroundColor="@color/new_secondary_text"
        android:text="发送地址"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"/>
</LinearLayout>
