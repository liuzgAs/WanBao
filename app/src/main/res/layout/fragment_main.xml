<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/wl_main"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/background"
    tools:context="com.wanbao.fragment.MainFragment">
    <include layout="@layout/newtitle_shouye"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/title">
    </include>
    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/lv_main"
        android:layout_width="0dp"
        app:layout_progress="@layout/mydialog"
        app:scrollbarStyle="insideOverlay"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </com.jude.easyrecyclerview.EasyRecyclerView>
    <ImageView
        android:id="@+id/imageHongBaoDialog"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/hongbaoxuanfu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone" />
</android.support.constraint.ConstraintLayout>
