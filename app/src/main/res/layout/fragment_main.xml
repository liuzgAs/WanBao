<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/wl_main"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/background"
    tools:context="com.wanbao.fragment.MainFragment">
    <!--<include layout="@layout/newtitle_shouye"-->
        <!--app:layout_constraintTop_toTopOf="parent"-->
        <!--android:id="@+id/title">-->
    <!--</include>-->
    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/lv_main"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/viewBar"
        app:layout_progress="@layout/mydialog"
        app:scrollbarStyle="insideOverlay"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </com.jude.easyrecyclerview.EasyRecyclerView>
    <LinearLayout
        android:id="@+id/viewBar"
        android:orientation="vertical"
        android:gravity="bottom"
        android:background="@drawable/red_jianbian"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">
            <ImageView
                android:id="@+id/imageSaoMiao"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:padding="@dimen/dp_10"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:src="@mipmap/main_saomiao"/>
            <LinearLayout
                android:id="@+id/viewAddress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="?android:selectableItemBackground"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_5"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15"
                    android:maxLength="4"
                    android:text="定位中"/>
                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_2"
                    android:src="@mipmap/main_down"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/imageGouWuChe"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:padding="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/mian_gouwuc"/>
            <LinearLayout
                android:id="@+id/viewSouSuo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_32"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageGouWuChe"
                android:layout_toRightOf="@+id/viewAddress"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@mipmap/main_sousuo"
                >
                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@mipmap/main_sousuos"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/new_secondary_text"
                    android:textSize="@dimen/sp_12"
                    android:text="输入商家、商品名称"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/imageHongBaoDialog"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/hongbaoxuanfu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone" />
</android.support.constraint.ConstraintLayout>
