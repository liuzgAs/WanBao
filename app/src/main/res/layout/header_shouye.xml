<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/dp_10"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/viewGsc"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                app:srcCompat="@mipmap/shouye_gsc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="#505050"
                android:text="逛商场" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/viewWxby"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                app:srcCompat="@mipmap/shouye_wxby" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="#505050"
                android:text="维修保养" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/viewSsfy"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                app:srcCompat="@mipmap/shouye_ssfy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="#505050"
                android:text="赛事风云" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/viewAcrj"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                app:srcCompat="@mipmap/shouye_acrj" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="#505050"
                android:text="爱车日记" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/viewPmzc"
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                app:srcCompat="@mipmap/souye_pmzc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="#505050"
                android:text="优质二手车" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_10">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_20"
            app:srcCompat="@mipmap/icon_qctt" />
        <com.sunfusheng.marqueeview.MarqueeView
            android:id="@+id/marqueeView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            app:mvAnimDuration="1000"
            app:mvDirection="bottom_to_top"
            app:mvInterval="5000"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            app:mvTextColor="@color/new_important_text"
            app:mvTextSize="@dimen/sp_14"
            app:mvSingleLine="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10">
        <RelativeLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:id="@+id/viewScsj"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="@dimen/dp_73">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                app:srcCompat="@mipmap/shouye_scsj"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/imageView5" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView5"
                android:layout_toRightOf="@+id/imageView5"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/new_important_text"
                android:text="试乘试驾" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView5"
                android:layout_toRightOf="@+id/imageView5"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_13"
                android:maxLines="1"
                android:textColor="@color/new_secondary_text"
                android:text="400匹全时四驱到底" />
        </RelativeLayout>
        <View
            android:layout_width="@dimen/dp_2"
            android:layout_height="match_parent"
            android:background="@color/background"></View>
        <RelativeLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/viewHdxx"
            android:layout_height="@dimen/dp_73">
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                app:srcCompat="@mipmap/shouye_hdxx"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/imageView6" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView6"
                android:layout_toRightOf="@+id/imageView6"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/new_important_text"
                android:text="活动讯息" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView6"
                android:layout_toRightOf="@+id/imageView6"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_13"
                android:maxLines="1"
                android:textColor="@color/new_secondary_text"
                android:text="活动讯息详情" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/white">
        <ImageView
            android:layout_width="@dimen/dp_74"
            android:layout_height="@dimen/dp_40"
            app:srcCompat="@mipmap/shouye_ptms"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
             />
    </RelativeLayout>
</LinearLayout>
