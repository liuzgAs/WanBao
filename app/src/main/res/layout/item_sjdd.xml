<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/layout_selector_white_system_gray"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10">

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            app:srcCompat="@mipmap/wbdd_liebiao" />
        <TextView
            android:id="@+id/textStoreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/new_important_text"
            android:textSize="@dimen/sp_13"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="汽车有限公司"/>
        <TextView
            android:id="@+id/textState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/deep_red"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="待付款"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        >

        <ImageView
            android:id="@+id/imageCar"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            app:srcCompat="@mipmap/wbljzf_che" />
        <TextView
            android:id="@+id/textCarNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/new_important_text"
            android:text="闽D11125"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_13"/>
        <TextView
            android:id="@+id/textCarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/new_secondary_text"
            android:text="车型："
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_100"
            />

        <TextView
            android:id="@+id/textBookTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageCar"
            android:layout_alignLeft="@+id/textCarName"
            android:layout_alignStart="@+id/textCarName"
            android:text="预约时间："
            android:textColor="@color/new_secondary_text"
            android:textSize="@dimen/sp_13" />
        <TextView
            android:id="@+id/textOrder_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:visibility="invisible"
            android:textColor="@color/new_important_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_13"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/background"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        >
        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/new_secondary_text"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            android:text="取消订单"/>
        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:visibility="gone"
            android:background="@drawable/red_yuanjiao"
            android:textColor="@color/deep_red"
            android:textSize="@dimen/sp_14"
            android:text="立即支付"/>
    </LinearLayout>
</LinearLayout>
