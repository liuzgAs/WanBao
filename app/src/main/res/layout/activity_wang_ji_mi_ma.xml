<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.wanbao.activity.WangJiMiMaActivity">
    <include layout="@layout/newtitle"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="@dimen/dp_23"
                app:srcCompat="@mipmap/wjmm_zhanghao" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:hint="请输入手机号"
                android:textColor="@color/new_important_text"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/background"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="@dimen/dp_23"
                app:srcCompat="@mipmap/wjmm_duanxin" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:hint="请输入验证码"
                android:textColor="@color/new_important_text"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/new_red"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/background">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="@dimen/dp_23"
                app:srcCompat="@mipmap/wjmm_mima" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:hint="请设置新密码"
                android:textColor="@color/new_important_text"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/background"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="@dimen/dp_23"
                app:srcCompat="@mipmap/wjmm_mima" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:hint="确认密码"
                android:textColor="@color/new_important_text"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"></View>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:text="提交"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/white"
        android:background="#343434"/>
</LinearLayout>
