<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_230"
        android:background="@mipmap/dlzc_beijing">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/dp_43"
            android:layout_height="@dimen/dp_43"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_5"
            app:srcCompat="@drawable/ic_chevron_left_white_24dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_267"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_140">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            android:background="@mipmap/yuanjiaobj"
            android:layout_height="@dimen/dp_200">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_43"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dp_23"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_height="@dimen/dp_23"
                    app:srcCompat="@mipmap/dlzc_zhanghao" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="@dimen/sp_14"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:hint="请输入账号"
                    android:textColor="@color/new_important_text"
                    android:layout_weight="1"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/background"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_43"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dp_23"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_height="@dimen/dp_23"
                    app:srcCompat="@mipmap/dlzc_mima" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="@dimen/sp_14"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:hint="请输入密码"
                    android:textColor="@color/new_important_text"
                    android:layout_weight="1"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/background"></View>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_63"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/dp_40"
            android:paddingLeft="@dimen/dp_27"
            android:paddingRight="@dimen/dp_23"
            android:background="@mipmap/dlzc_aj">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/dp_6"
                android:textSize="@dimen/sp_15"
                android:text="立即登录"/>

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_marginBottom="@dimen/dp_6"
                app:srcCompat="@drawable/ic_keyboard_arrow_right_white_24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentBottom="true">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/new_secondary_text"
                />
            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_20"
                android:background="@color/new_underline"></View>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即注册"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/new_secondary_text"
                />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
