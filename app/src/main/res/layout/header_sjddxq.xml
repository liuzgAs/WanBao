<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/viewState"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@mipmap/wbddxq_zt"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <ImageView
            android:id="@+id/imageState"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            app:srcCompat="@mipmap/wbddxq_qpj" />

        <TextView
            android:id="@+id/textState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:text="订单待评价"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/textStateTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="去评价"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            app:srcCompat="@drawable/ic_keyboard_arrow_right_white_24dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                app:srcCompat="@mipmap/wbdd_liebiao" />
            <TextView
                android:id="@+id/textStoreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/new_important_text"
                android:textSize="@dimen/sp_13"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="汽车有限公司"/>
            <LinearLayout
                android:id="@+id/viewPhone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/layout_selector_white_system_gray"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@mipmap/icon_phone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/new_important_text"
                    android:text="联系门店"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/background"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            >

            <ImageView
                android:id="@+id/imageCar"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_60"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                app:srcCompat="@mipmap/wbljzf_che" />
            <TextView
                android:id="@+id/textCarNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/new_important_text"
                android:text="闽D11125"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_13"/>
            <TextView
                android:id="@+id/textCarName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/new_secondary_text"
                android:text="车型："
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_100"
                />

            <TextView
                android:id="@+id/textBookTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageCar"
                android:layout_alignLeft="@+id/textCarName"
                android:layout_alignStart="@+id/textCarName"
                android:text="预约时间："
                android:textColor="@color/new_secondary_text"
                android:textSize="@dimen/sp_13" />
            <TextView
                android:id="@+id/textOrder_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:visibility="invisible"
                android:textColor="@color/new_important_text"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/dp_13"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/background">
        </View>
        <com.wanbao.base.ui.ListViewForScrollView
            android:id="@+id/listView"
            android:divider="@color/transparent"
            android:dividerHeight="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.wanbao.base.ui.ListViewForScrollView>
    </LinearLayout>

</LinearLayout>
